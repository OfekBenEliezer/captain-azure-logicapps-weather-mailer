{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": { "type": "string" },
    "location": { "type": "string", "defaultValue": "[resourceGroup().location]" },
    "openWeatherKey": { "type": "securestring" }, 
    "office365ConnectionName": { "type": "string", "defaultValue": "office365" },
    "workflowDefinition": { "type": "string" }
  },
  "variables": {
    "office365ConnectionResourceId": "[resourceId('Microsoft.Web/connections', parameters('office365ConnectionName'))]",
    "office365ManagedApiId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/office365')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('office365ConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "[parameters('office365ConnectionName')]",
        "api": {
          "id": "[variables('office365ManagedApiId')]"
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', parameters('office365ConnectionName'))]"
      ],
      "properties": {
        "state": "Enabled",
        "definition": "[json(parameters('workflowDefinition'))]",
        "parameters": {
          "openWeatherKey": { "value": "[parameters('openWeatherKey')]" },
          "office365_connection_name": { "value": "[parameters('office365ConnectionName')]" },
          "$connections": {
            "value": {
              "office365": {
                "connectionId": "[variables('office365ConnectionResourceId')]",
                "connectionName": "[parameters('office365ConnectionName')]",
                "id": "[variables('office365ManagedApiId')]"
              }
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "logicAppId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Logic/workflows', parameters('logicAppName'))]"
    }
  }
}
